# ============================================================================
# Email Management Tool - Environment Configuration
# Copy this file to .env and fill in values as needed.
# ============================================================================

# Flask Security (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=CHANGE_ME_FLASK_SECRET_KEY

# Feature Toggles
ENABLE_WATCHERS=1              # 1=enable IMAP watchers, 0=disable
ENABLE_LIVE_EMAIL_TESTS=0      # 1=run live email tests, 0=skip (default off for CI)
LIVE_EMAIL_ACCOUNT=gmail       # gmail or hostinger

# Attachment Feature Flags (Phase 1-4 implementation complete)
ATTACHMENTS_UI_ENABLED=true          # Enable attachment viewing in UI
ATTACHMENTS_EDIT_ENABLED=true        # Enable attachment upload/replace/remove
ATTACHMENTS_RELEASE_ENABLED=true     # Enable attachment preservation during release

# IMAP Watcher Configuration
IMAP_DISABLE_IDLE=1            # 1=force polling mode, 0=use IDLE (default: 0)
IMAP_POLL_INTERVAL=10          # Polling interval in seconds (default: 30)
IMAP_LOG_VERBOSE=1             # 1=verbose IMAP logging, 0=normal (default: 0)
IMAP_SWEEP_LAST_N=100          # Number of recent UIDs to sweep (default: 50)
IMAP_CIRCUIT_THRESHOLD=5       # Error count before circuit breaker trips (default: 5)

# Database
DB_PATH=email_manager.db

# Flask server
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=1

# SMTP proxy
SMTP_PROXY_HOST=127.0.0.1
SMTP_PROXY_PORT=8587

# Optional: Email account credentials for local testing (leave blank by default)
GMAIL_ADDRESS=
GMAIL_PASSWORD=
HOSTINGER_ADDRESS=
HOSTINGER_PASSWORD=

# Integration Testing Control (legacy key for older scripts)
INTEGRATION_EMAIL_TESTS=0

# Utility script credentials (used by test_post_operations.py)
EMAIL_MANAGER_BASE_URL=http://localhost:5020
EMAIL_MANAGER_USERNAME=CHANGE_ME_USERNAME
EMAIL_MANAGER_PASSWORD=CHANGE_ME_PASSWORD

# Production Settings (uncomment/adjust for production)
# WTF_CSRF_SSL_STRICT=1                        # Enforce HTTPS for CSRF
# RATELIMIT_STORAGE_URL=redis://localhost:6379 # Persistent rate limiting

# SECURITY WARNING:
# - Never commit .env files with real credentials
# - Use App Passwords (not regular passwords) for Gmail/Outlook
# - Rotate credentials if accidentally exposed
# - Values here are placeholders only
